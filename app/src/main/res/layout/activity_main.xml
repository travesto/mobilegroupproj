<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teammint.classroster.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/fName"
                                    android:layout_width="352dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="16dp"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="@string/fName"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="My first name is..." />

                                <EditText
                                    android:id="@+id/lName"
                                    android:layout_width="352dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="@string/lName"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/fName"
                                    tools:text="My last name is..." />

                                <EditText
                                    android:id="@+id/major"
                                    android:layout_width="352dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="@string/major"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/lName"
                                    tools:text="My major is..." />

                                <EditText
                                    android:id="@+id/location"
                                    android:layout_width="352dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="@string/location"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/major"
                                    tools:text="I am from..." />

                                <Spinner
                                    android:id="@+id/gender"
                                    android:layout_width="352dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:ems="10"


                                    android:spinnerMode="dropdown"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/location"
                                     />

                                <ImageView
                                    android:id="@+id/Frame"
                                    android:layout_width="167dp"
                                    android:layout_height="134dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/gender"
                                    app:srcCompat="@android:drawable/ic_menu_camera" />

                                <Button
                                    android:id="@+id/clearPic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginEnd="24dp"
                                    android:layout_marginRight="19dp"
                                    android:layout_marginTop="16dp"
                                    android:onClick="clear"
                                    android:text="Button"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/takePic"
                                    app:layout_constraintVertical_bias="0.003"
                                    tools:text="Clear Picture" />

                                <Button
                                    android:id="@+id/takePic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="24dp"
                                    android:layout_marginRight="45dp"
                                    android:layout_marginTop="-8dp"
                                    android:onClick="btnClick"
                                    android:text="Button"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/gender"
                                    tools:text="Take Picture" />

                                <EditText
                                    android:id="@+id/editText8"
                                    android:layout_width="352dp"
                                    android:layout_height="151dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:ems="10"
                                    android:inputType="textMultiLine"
                                    android:text="Notes"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/Frame" />

                                <Button
                                    android:id="@+id/button4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Button"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/editText8"
                                    tools:text="Save" />

                            </android.support.constraint.ConstraintLayout>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.constraint.ConstraintLayout>
