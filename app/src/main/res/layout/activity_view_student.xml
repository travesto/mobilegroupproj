<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teammint.classroster.viewStudentActivity">
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ScrollView
            android:id="@+id/type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="insideOverlay"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fName"
                        android:layout_width="361dp"
                        android:layout_height="44dp"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        tools:ignore="HardcodedText"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.571"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/Frame" />

                    <TextView
                        android:id="@+id/lName"
                        android:layout_width="363dp"
                        android:layout_height="47dp"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        tools:ignore="HardcodedText"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.6"
                        android:layout_marginTop="-1dp"
                        app:layout_constraintTop_toBottomOf="@+id/fName" />

                    <TextView
                        android:id="@+id/major"
                        android:layout_width="364dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="-7dp"
                        android:ems="10"
                        android:hint="@string/majoro"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lName" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="364dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="9dp"
                        android:ems="10"
                        android:hint="Where I am From..."
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/major"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="365dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:autofillHints="Gender"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/location"
                        tools:ignore="MissingConstraints"
                        tools:targetApi="o"
                        android:layout_marginRight="0dp" />

                    <ImageView
                        android:id="@+id/Frame"
                        android:layout_width="136dp"
                        android:layout_height="122dp"
                        android:layout_marginTop="31dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/ic_launcher5"
                        tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:ems="10"
                        android:hint="Something People Should Know About Me..."
                        android:inputType="textMultiLine"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gender"
                        tools:ignore="HardcodedText" />
<!--
                    <TextView
                        android:id="@+id/spinnerOS"
                        android:layout_width="0dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/note"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />
-->
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
